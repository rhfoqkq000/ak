<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:paddingBottom="16dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wisper_ok_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="동아리이름"
            android:textColor="#000"
            android:textSize="18dp" />

        <View
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/wisper_ok_name"
            android:background="#ececec" />

        <TextView
            android:id="@+id/wisper_ok_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_view"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="제목"
            android:textColor="#000"
            android:textSize="18dp" />

        <View
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/wisper_ok_title"
            android:background="#ececec" />

        <TextView
            android:id="@+id/wisper_ok_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_view"
            android:layout_margin="10dp"
            android:background="@null"
            android:text="내용"
            android:textColor="#000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wisper_ok_content1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/wisper_ok_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/four"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/four"
                    android:text="불참"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/wisper_none_id_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal|center_vertical"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:visibility="gone" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/wisper_ok_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/four"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/four"
                    android:text="참석"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>