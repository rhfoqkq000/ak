<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/pro_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="이름"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pro_sub_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/pro_sub_name"
        android:text="학과"
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/pro_sub_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mail_fill" />


    <ImageButton
        android:id="@+id/pro_sub_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/pro_sub_mail"
        android:background="@drawable/call_fill" />

    <TextView
        android:id="@+id/pro_call_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_sub_name"
        android:layout_marginStart="37dp"
        android:layout_marginTop="161dp"
        android:layout_toEndOf="@+id/pro_sub_major"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pro_mail_gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pro_sub_name"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="187dp"
        android:layout_toStartOf="@+id/pro_sub_call"
        android:visibility="gone" />
</RelativeLayout>