                        android:gravity="center_horizontal"
                        android:text="학과교양" />

                    <TextView
                        android:id="@+id/kyo_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="중점교양" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="필요학점" />

                    <TextView
                        android:id="@+id/kyo_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="7" />

                    <TextView
                        android:id="@+id/kyo_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="9" />

                    <TextView
                        android:id="@+id/kyo_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
